@model IEnumerable<CRMYonetimSistemi.ViewModels.ProductIndexViewModel>

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<h1>Ürün Yönetimi</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Yeni Ürün Tanımla</a>
    <a asp-action="Purchase" class="btn btn-success">Yeni Ürün Al</a>
    <a asp-action="PurchaseHistory" class="btn btn-secondary">Ürün Alım Geçmişi</a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AverageUnitCostInTRY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th style="width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.AverageUnitCostInTRY.ToString("C2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock) Adet
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>