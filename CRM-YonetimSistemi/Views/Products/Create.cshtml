@model CRMYonetimSistemi.Models.Product

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h1>Yeni Ürün Ekle</h1>

<h4>Ürün Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        @* Form gönderildiğinde ProductsController'daki "Create" metodunu çağırır. *@
        <form asp-action="Create">
            @* Modeldeki hataları toplu olarak göstermek için kullanılır. *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProductPriceInUSD" class="control-label"></label>
                <input asp-for="ProductPriceInUSD" class="form-control" />
                <span asp-validation-for="ProductPriceInUSD" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Kg" class="control-label"></label>
                <input asp-for="Kg" class="form-control" />
                <span asp-validation-for="Kg" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ShippingCostPerKg" class="control-label"></label>
                <input asp-for="ShippingCostPerKg" class="form-control" />
                <span asp-validation-for="ShippingCostPerKg" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ExchangeRate" class="control-label"></label>
                <input asp-for="ExchangeRate" class="form-control" />
                <span asp-validation-for="ExchangeRate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DefaultSellingPrice" class="control-label"></label>
                <input asp-for="DefaultSellingPrice" class="form-control" />
                <span asp-validation-for="DefaultSellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            @* Diğer alanlar için de yukarıdaki gibi form-group div'leri ekleyebilirsiniz. *@
            @* Örneğin CalculatedCost, sistem tarafından hesaplanacağı için burada input'a gerek yoktur. *@

            <div class="form-group mt-4">
                <input type="submit" value="Oluştur" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@* Client-side validation (tarayıcı tarafında doğrulama) için gereklidir. *@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
