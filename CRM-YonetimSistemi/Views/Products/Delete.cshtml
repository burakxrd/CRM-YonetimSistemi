@model CRMYonetimSistemi.Models.Product

@{
    ViewData["Title"] = "Ürünü Sil";
}

<h1>Ürünü Sil</h1>

<h3 class="text-danger">Bu ürünü silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DefaultSellingPrice)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DefaultSellingPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        @* Silinecek ürünün Id'sini form içinde gizli olarak tutarız. *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>
